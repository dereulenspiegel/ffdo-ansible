template bgp uplink {
        local as {{as}};
        import all;
        export all;
        next hop self;
        direct;
        multihop 64;
}

{% if peers is defined %}
{% for peer in peers %}
protocol bgp {{peer.name}} from uplink {
        neighbor {{peer.peer_ipv6}} as {{peer.as}};
        default bgp_med 2;
}

{% endfor %}
{% endif %}
