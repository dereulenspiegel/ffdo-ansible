template bgp uplink {
        local as {{as}};
        import all;
        export all;
        next hop self;
        multihop 64;
};

{% if peers is defined %}
{% for peer in peers %}
protocol bgp {{peer.name}} from uplink {
        source address {{peer.source_ipv4}};
        neighbor {{peer.peer_ipv4}} as {{peer.as}};
        default bgp_med 2;
};

{% endfor %}
{% endif %}
