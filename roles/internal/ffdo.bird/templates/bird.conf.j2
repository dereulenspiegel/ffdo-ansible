log syslog all;
router id {{mesh_ipv4|ipaddr('address')}};

include "/etc/bird.d/*.cfg"

protocol direct {
        interface "*";
};

protocol kernel {
        device routes;
        import all;
        export all;
        kernel table 42;
};

protocol device {
        scan time 8;
};

template bgp ibgp {
        local as {{supernode_as}};
        import all;
        export all;
        next hop self;
        multihop 64;
};